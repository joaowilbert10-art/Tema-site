<section id="MainProduct-{{ section.id }}" class="product section-padding" data-section="{{ section.id }}">
  <div class="container">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
      {%- assign product = all_products[section.settings.product] | default: product -%}
      
      {%- if product == empty -%}
        <div class="product-media-wrapper">
          <div class="product-media">
            {{ 'product-1' | placeholder_svg_tag: 'placeholder-svg' }}
          </div>
        </div>
      {%- else -%}
        <div class="product-media-wrapper">
          {%- if product.featured_media -%}
            <div class="product-media">
              <img
                src="{{ product.featured_media | image_url: width: 800 }}"
                alt="{{ product.featured_media.alt | escape }}"
                width="{{ product.featured_media.width }}"
                height="{{ product.featured_media.height }}"
                loading="lazy"
              >
            </div>
          {%- endif -%}
        </div>
      {%- endif -%}

      <div class="product-info">
        {%- if product == empty -%}
          <h1 class="product-title">{{ 'onboarding.product_title' | t }}</h1>
          <div class="product-price">
            {{ 1999 | money }}
          </div>
          <div class="product-description">
            <p>{{ 'onboarding.product_description' | t }}</p>
          </div>
        {%- else -%}
          <h1 class="product-title">{{ product.title }}</h1>
          
          <div class="product-price">
            {{ product.price | money }}
          </div>

          {%- if product.description != blank -%}
            <div class="product-description">
              {{ product.description }}
            </div>
          {%- endif -%}

          {%- form 'product', product, id: 'product-form', class: 'product-form' -%}
            <div class="product-form__input">
              <label for="Quantity-{{ section.id }}">{{ 'products.product.quantity.label' | t }}</label>
              <input
                type="number"
                id="Quantity-{{ section.id }}"
                name="quantity"
                value="1"
                min="1"
                class="quantity-input"
              >
            </div>

            <div class="product-form__buttons">
              <button
                type="submit"
                name="add"
                class="btn btn-primary btn-lg"
                {% if product.selected_or_first_available_variant.available == false %}disabled{% endif %}
              >
                <span>
                  {%- if product.selected_or_first_available_variant.available -%}
                    {{ 'products.product.add_to_cart' | t }}
                  {%- else -%}
                    {{ 'products.product.sold_out' | t }}
                  {%- endif -%}
                </span>
              </button>
            </div>
          {%- endform -%}
        {%- endif -%}
      </div>
    </div>
  </div>
</section>

<style>
  .product {
    padding: var(--spacing-4xl) 0;
  }

  .product-media {
    position: relative;
    overflow: hidden;
    border-radius: var(--radius-lg);
    background-color: var(--color-base-050);
  }

  .product-media img {
    width: 100%;
    height: auto;
    display: block;
  }

  .product-title {
    font-size: var(--text-4xl);
    margin-bottom: var(--spacing-lg);
  }

  .product-price {
    font-size: var(--text-3xl);
    font-weight: 700;
    color: var(--color-cta-600);
    margin-bottom: var(--spacing-xl);
  }

  .product-description {
    margin-bottom: var(--spacing-2xl);
    line-height: 1.7;
  }

  .product-form__input {
    margin-bottom: var(--spacing-lg);
  }

  .product-form__input label {
    display: block;
    margin-bottom: var(--spacing-xs);
    font-weight: 600;
  }

  .quantity-input {
    width: 100px;
    padding: var(--spacing-sm);
    border: 2px solid var(--color-base-800);
    border-radius: var(--radius-md);
    font-size: var(--text-base);
  }

  .product-form__buttons {
    display: flex;
    gap: var(--spacing-md);
  }

  .product-form__buttons button {
    flex: 1;
  }

  @media (max-width: 768px) {
    .product-title {
      font-size: var(--text-3xl);
    }

    .product-price {
      font-size: var(--text-2xl);
    }
  }
</style>

{% schema %}
{
  "name": "Product Information",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "checkbox",
      "id": "enable_sticky_info",
      "default": true,
      "label": "Enable sticky product info"
    },
    {
      "type": "select",
      "id": "media_size",
      "options": [
        {
          "value": "small",
          "label": "Small"
        },
        {
          "value": "medium",
          "label": "Medium"
        },
        {
          "value": "large",
          "label": "Large"
        }
      ],
      "default": "large",
      "label": "Media size"
    }
  ]
}
{% endschema %}


