<section id="Main404-{{ section.id }}" class="main-404 section-padding" data-section="{{ section.id }}">
  <div class="container">
    <div class="error-404">
      <div class="error-404__content">
        <h1 class="error-404__title">404</h1>
        <h2 class="error-404__subtitle">{{ 'templates.404.title' | t }}</h2>
        <p class="error-404__message">{{ 'templates.404.subtext' | t }}</p>
        
        <div class="error-404__actions">
          <a href="{{ routes.root_url }}" class="btn btn-primary btn-lg">
            {{ 'templates.404.link' | t }}
          </a>
        </div>
      </div>
      
      <div class="error-404__image">
        {{ '404.svg' | placeholder_svg_tag: 'placeholder-svg' }}
      </div>
    </div>
  </div>
</section>

<style>
  .main-404 {
    padding: var(--spacing-4xl) 0;
    min-height: 60vh;
    display: flex;
    align-items: center;
  }

  .error-404 {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--spacing-4xl);
    align-items: center;
  }

  .error-404__content {
    text-align: center;
  }

  .error-404__title {
    font-size: 8rem;
    font-weight: 700;
    color: var(--color-cta-600);
    margin-bottom: var(--spacing-lg);
    line-height: 1;
  }

  .error-404__subtitle {
    font-size: var(--text-3xl);
    margin-bottom: var(--spacing-lg);
  }

  .error-404__message {
    font-size: var(--text-lg);
    color: var(--color-base-800);
    margin-bottom: var(--spacing-2xl);
    max-width: 400px;
    margin-left: auto;
    margin-right: auto;
  }

  .error-404__actions {
    margin-bottom: var(--spacing-2xl);
  }

  .error-404__image {
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .error-404__image svg {
    max-width: 100%;
    height: auto;
  }

  @media (max-width: 768px) {
    .error-404 {
      grid-template-columns: 1fr;
      gap: var(--spacing-2xl);
      text-align: center;
    }

    .error-404__title {
      font-size: 6rem;
    }

    .error-404__subtitle {
      font-size: var(--text-2xl);
    }
  }
</style>

{% schema %}
{
  "name": "Main 404",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "header",
      "content": "404 Page settings"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top padding",
      "default": 100
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom padding",
      "default": 100
    }
  ]
}
{% endschema %}
