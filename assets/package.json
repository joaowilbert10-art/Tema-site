{
  "name": "shopify-theme-intimate-grooming",
  "version": "1.0.0",
  "description": "Tema Shopify para marca de depilação íntima masculina - Portugal e Espanha",
  "main": "index.js",
  "scripts": {
    "build": "npm run build:css && npm run build:js",
    "build:css": "postcss assets/base.css -o assets/base.min.css",
    "build:js": "terser assets/global.js -o assets/global.min.js",
    "dev": "npm run build:css -- --watch",
    "lint": "eslint assets/*.js",
    "format": "prettier --write assets/*.js assets/*.css",
    "test": "echo \"No tests specified\" && exit 0"
  },
  "keywords": [
    "shopify",
    "theme",
    "liquid",
    "ecommerce",
    "intimate-grooming",
    "portugal",
    "spain"
  ],
  "author": "Tema-site",
  "license": "MIT",
  "devDependencies": {
    "autoprefixer": "^10.4.16",
    "cssnano": "^6.0.1",
    "eslint": "^8.55.0",
    "postcss": "^8.4.32",
    "postcss-cli": "^11.0.0",
    "prettier": "^3.1.1",
    "tailwindcss": "^3.3.6",
    "terser": "^5.24.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ]
}
